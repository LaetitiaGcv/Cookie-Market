{% block content %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/"><img class="pull-left" src="https://zupimages.net/up/20/31/89tu.png"
                                              alt="The Cookies Factory logo">
            <h1>The Cookies Factory</h1></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="dropdown-item" href="{{ path('card_index') }}">Shopping List</a>
                </li>

                {% if app.user %}
                    <li class="nav-item">
                        <div class="mb-3">
                            Welcome {{ app.user.username }} ! <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    </li>
                {% else %}

                    <li class="nav-item">
                        <a class="dropdown-item" href="{{ path('app_login') }}">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="dropdown-item" href="{{ path('app_register') }}">Register</a>
                    </li>
                {% endif %}
        </div>
    </nav>

{% endblock %}